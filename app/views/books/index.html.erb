<div class="w-full">
  <%= link_to "<-- back", root_path, class: "border-gray-700 border-l-1 text-center text-gray-500 px-1 py-1 rounded-md" %>
  <div class="flex justify-between items-center w-full mb-4 mt-4">
    <h1 class="text-4xl font-semibold">Your books</h1>
    <%= link_to "+ Add new book", new_book_path, class: "border-l-1 border-r-1 border-blue-700 text-center text-blue-500 px-3 py-2 rounded-md" %>
  </div>
  <hr>
  <div class="mt-2">
    <% @books.each do |book| %>
      <%= link_to book_path(book) do %>
      <div class="p-2 mt-6 border-t-4 rounded shadow-xl transition duration-300 hover:shadow-2xl <%= book.read? ? 'border-emerald-400' : 'border-blue-500'%>">
        <div class="flex justify-between items-center w-full">
          <h1 class="text-2xl font-semibold"><%= book.title %></h1>
          <%#= button_to "Delete", book_path(book), method: :delete, class: "bg-rose-400 border-rose-700 text-center text-white px-1 py-1 rounded-md cursor-pointer" %>
        </div>
        <p class="mt-2 mb-6 ml-4"><%= book.description %></p>
        <div class="flex justify-end items-center w-full">
          <p><%= book.bookmark %> / <%= book.pages %></p>
        </div>
<!--        <div class="flex justify-end items-center w-full">-->
          <%#= link_to "Edit", edit_book_path(book), class: "bg-gray-500 border-gray-700 text-center text-white px-1 py-1 rounded-md" %>
<!--        </div>-->
      </div>
      <% end %>
    <% end %>
  </div>
</div>

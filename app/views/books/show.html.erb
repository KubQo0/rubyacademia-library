<div class="w-full p-4 shadow-2xl rounded-md border-t-4 <%= @book.read? ? "border-green-700" : "border-blue-500" %>">
  <div class="flex items-center w-full">
    <%= link_to "<-- Back", books_path, class: "border-gray-700 border-l-1 text-center text-gray-500 px-1 py-1 rounded-md" %>
  </div>
  <div class="m-8">
    <h1 class="text-3xl font-semibold"><%= @book.title %></h1>
    <div class="ml-6 mt-4">
      <p class="mb-2"><strong>Description: </strong><%= @book.description %></p>
      <p class="mt-2"><strong>Staus: </strong>
        <span class="<%= @book.read? ? "text-green-700" : "text-blue-500" %>">
          <%= @book.read? ? "Finished " : "Still reading " %>
        </span><br>
        ( <%= @book.bookmark %> / <%= @book.pages %> )
      </p>
<!--      <p><%#= @book.pages %></p>-->
<!--      <p><%#= @book.bookmark %></p>-->
    </div>
  </div>
  <div class="flex justify-between items-center w-full">
    <%= link_to "Edit", edit_book_path(@book), class: "border-l-1 border-r-1 border-blue-700 text-center text-blue-500 px-1 py-1 rounded-md" %>
    <%= button_to "Delete", book_path(@book), method: :delete, class: "border-l-1 border-r-1 border-rose-700 text-center text-rose-500 px-1 py-1 rounded-md cursor-pointer" %>
  </div>
</div>

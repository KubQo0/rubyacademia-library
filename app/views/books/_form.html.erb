<%= form_with model: @book do |f|%>
  <% if @book.errors.any? %>
    <ul>
      <% @book.errors.each do |e| %>
        <li class="px-4 py-2 text-rose-600 border border-rose-500 bg-rose-100 mt-2 rounded-md"><%= e.full_message %></li>
      <% end %>
    </ul>
  <% end %>
  <div class="mt-1">
    <%= f.label :title, class: 'text-sm font-semibold mt-2' %>
    <%= f.text_field :title, class: 'mt-1 w-full border-0 ring-1 px-3 py-1.5 ring-gray-400 rounded-md' %>
  </div>
  <div class="mt-1">
    <%= f.label :description, class: 'text-sm font-semibold mt-2' %>
    <%= f.text_area :description, class: 'mt-1 w-full border-0 ring-1 px-3 py-1.5 ring-gray-400 rounded-md' %>
  </div>
  <div class="flex gap-2">
    <div class="flex flex-col flex-1">
      <%= f.label :bookmark, class: 'text-sm font-semibold' %>
      <%= f.number_field :bookmark, class: 'mt-1 w-full border-0 ring-1 px-3 py-1.5 ring-gray-400 rounded-md' %>
    </div>
    <div class="flex flex-col flex-1">
      <%= f.label :pages, class: 'text-sm font-semibold' %>
      <%= f.number_field :pages, class: 'mt-1 w-full border-0 ring-1 px-3 py-1.5 ring-gray-400 rounded-md' %>
    </div>
  </div>
  <div>
    <%= f.label :read, class: 'text-sm font-semibold mt-3 mb-3' %>
    <%= f.check_box :read, class: 'mt-3 mb-3 cursor-pointer' %>
  </div>
  <div>
    <%= f.submit submit_text, class: 'border-l-1 border-r-1 bg-blue-100 border-blue-700 text-center text-blue-500 px-4 py-2 rounded-md w-full cursor-pointer' %>
  </div>
<% end %>
